{
  // Change port here if needed
  "Kestrel:Endpoints:Http:Url": "http://localhost:5000",

  // Set max request body size to restrict large file uploads
  // (this is size of full request: image + all text values + service data)
  "Kestrel:Limits:MaxRequestBodySize": 5242880, // 5 MB (5 * 1024 * 1024)

  "BackendOptions": {
    // Telegram bot token (from BotFather), required.
    "TelegramBotToken": "",
    // ChatId to post new Pot notifications. Optional.
    "TelegramPublishingChatId": "",
    // ThreadId in forum-like chats. Optional.
    "TelegramPublishingThreadId": null
  },

  "BackupOptions": {
    // Path to folder to create DB backup after adding every new pot (and every several hours). Leave empty to disable backup.
    "Location": "",
    // Interval between backups. Default is 4 hours.
    "Interval": "0.04:00:00"
  },

  // Cover images: use https://app.pinata.cloud
  "PinataOptions": {
    // Go to "API Keys" section, create a key which has "pinFileToIPFS" permission, and put JWT here
    "JwtToken": "",
    // Go to "Gateways" section and put "Domain" here
    "GatewayDomain": "something-123.mypinata.cloud"
  },

  // Don't change unless you absolutely sure
  "TonOptions": {
    "UseMainnet": false,
    "VerbosityLevel": 0,
    "LogTextLimit": 1500
  },

  // Logging settings. Allowed values: Trace, Debug, Information, Warning, Error.
  "Logging": {
    "LogLevel": {
      "Default": "Debug",
      "TonLibDotNet.TonClient": "Warning",
      "RecurrentTasks": "Warning",
      "Microsoft": "Information",
      "Microsoft.AspNetCore": "Warning",
      "System": "Warning",
      "System.Net.Http.HttpClient": "Warning"
    }
  },

  // Do not change unless you already know you should
  "AllowedHosts": "*"
}
